#!/bin/sh
# postinst script for minecraft-client
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)
    MC_JAR=https://s3.amazonaws.com/MinecraftDownload/launcher/minecraft.jar
    MC_ICO=http://www.minecraft.net/favicon.png

    MC_JAR_TMP=`tempfile -p minecraft -s .jar`
    MC_ICO_TMP=`tempfile -p favicon -s .png`

    MC_JAR_DST=/usr/lib/minecraft-client/minecraft.jar
    MC_ICO_DST_XPM=/usr/share/pixmaps/minecraft-client.xpm
    MC_ICO_DST_PNG=/usr/share/pixmaps/minecraft-client.png

    wget -O $MC_JAR_TMP $MC_JAR
    wget -O $MC_ICO_TMP $MC_ICO

    mv $MC_JAR_TMP $MC_JAR_DST

    convert $MC_ICO_TMP -resize 32x32 $MC_ICO_DST_XPM
    mv $MC_ICO_TMP $MC_ICO_DST_PNG

    chmod 0644 $MC_JAR_DST
    chmod 0644 $MC_ICO_DST_XPM
    chmod 0644 $MC_ICO_DST_PNG

    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
